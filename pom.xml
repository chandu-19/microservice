<build>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.8.1</version> <!-- Use the latest version of the plugin -->
            <configuration>
                <source>1.8</source> <!-- Use a valid Java version like 1.8 or 17 -->
                <target>1.8</target>
            </configuration>
        </plugin>
    </plugins>
</build>
